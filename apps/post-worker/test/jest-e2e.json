{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/test-utils/(.*)$": "<rootDir>/../../../packages/test-utils/src/$1",
    "^@repo/db/prisma/generated/prisma$": "<rootDir>/../../../packages/db/prisma/generated/prisma",
    "^@repo/db$": "<rootDir>/../../../packages/db/src"
  }
}
