{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@repo/test-utils": ["<rootDir>/../../packages/test-utils/src"],
    "@repo/db": ["<rootDir>/../../packages/db/src"]
  }
}